{{!-- Import custom stylesheet to layout --}}
{{#section 'css'}}
	<link href="/home/assets/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
    <link href="/home/style.css" rel="stylesheet" type="text/css" />
{{/section}}
{{!-- Import custom script to layout --}}
{{#section 'js'}}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.8.2/xlsx.full.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/1.3.3/FileSaver.min.js"></script>
	<script src="/home/assets/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
	<script src="/home/game/js/storeReport.js" type="text/javascript"></script>


	<script>
            var stores = [
			{{#each stores}}
				{ 
					id : '{{account}}',
					text : '<span id="storeId" store={{id}} class="store">{{name}}</span>',
					html :  '<span class="store-option">' + 
                    '{{name}} &nbsp;  (<span class="m--font-bold m--font-primary">{{account}}</span>)' +         
                  '</span>',
					title : '{{name}}',
				}, 
			{{/each}}
		];
	</script>
	
{{/section}}


{{!-- Header goes here --}}
<!-- BEGIN: Subheader -->
<div class="m-subheader ">
	<div class="d-flex align-items-center">
		<div class="mr-auto">
			<h3 class="m-subheader__title "></h3>
		</div>
	</div>
</div>
<!-- END: Subheader -->

{{!-- Content goes here --}}
<div class="m-content">
	<div class="m-portlet m-portlet--mobile">
		<div class="m-portlet__head">
			<div class="m-portlet__head-caption">
				<div class="m-portlet__head-title">
					<h2 class="m-portlet__head-text">
						店家報表
					</h2>
				</div>
			</div>  
		</div>

		<div class="m-portlet__body">

		<!--begin: Search Form -->

		<form class="m-form m-form--fit " id="storeReport-form">
		
				{{!-- <div class="row m--margin-bottom-20"> --}}
				<div class="form-group m-form__group row">
					<div class="col-lg-3 m--margin-bottom-10-tablet-and-mobile">
						<label>店家</label>
						<select class="form-control m-input" data-col-index="2" id="storeAccount" name="storeAccount">
							<option value=""></option>
						</select>
					</div>
				</div>

				<div class="form-group m-form__group row">
					<div class="col-lg-6 m--margin-bottom-10-tablet-and-mobile">
						<label>查詢日期:</label>
						<div class="input-group date">
							<input id= "datetime" class="form-control m-input" readonly placeholder="Select date & time" type="text" name="datetimes" />
		
							<div class="input-group-append">
								<span class="input-group-text"><i class="la la-calendar-check-o glyphicon-th"></i></span>
							</div>
						</div>
					</div>
				</div>
               
				<div class="m-separator m-separator--md m-separator--dashed"></div>
				<div class="row">
					<div class="col-lg-12">
						<button type="submit" class="btn btn-brand m-btn m-btn--icon" id="m_search">
							<span>
								<i class="la la-search"></i>
								<span>搜尋</span>
							</span>
						</button>
						&nbsp;&nbsp;
						<button type="reset" class="btn btn-secondary m-btn m-btn--icon" id="m_reset">
							<span>
								<i class="la la-close"></i>
								<span>重設欄位</span>
							</span>
						</button>
						&nbsp;&nbsp;
						<button class="btn btn-danger m-btn m-btn--icon" id="export">
							<span>
								<i class="la la-download"></i>
								<span>導出報表</span>
							</span>
						</button>
					</div>
				</div>
				

		</form>
			
			<table class="table table-striped- table-bordered table-hover table-checkable" id="m_table_1">
				<thead>
					<tr>
						<th>店家</th>
						<th>代理</th>
						<th>玩家</th>
						<th>遊戲</th>
						<th>結果</th>
                        <th>店家分潤</th>
                        <th>代理分潤</th>
                        <th>系統分潤</th>
						<th>時間</th>
					</tr>
				</thead>
			
				<tfoot align="right">
					<tr>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
                        <th></th>
					</tr>
				</tfoot>
				
			</table>

		</div>
	</div>
</div>