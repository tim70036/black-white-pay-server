{{!-- Header goes here --}}
<!-- BEGIN: Subheader -->
<div class="m-subheader ">
	<div class="d-flex align-items-center">
		<div class="mr-auto">
			<h3 class="m-subheader__title "></h3>
		</div>
	</div>
</div>
<!-- END: Subheader -->

{{!-- Content goes here --}}
<div class="m-content">
	
	<div class="m-portlet m-portlet--mobile">
		<div class="m-portlet__head">
			<div class="m-portlet__head-caption">
				<div class="m-portlet__head-title">
					<h2 class="m-portlet__head-text">
						廣告查詢
					</h2>
				</div>
			</div>  
			<div class="m-portlet__head-tools">
				<ul class="m-portlet__nav">
					<li class="m-portlet__nav-item">
						<button id="createFormButton" data-toggle="modal" data-target="#create-modal" type="button" class="btn btn-accent m-btn m-btn--custom m-btn--icon m-btn--bolder">
							<span>
								<i class="fa fa-plus"></i>
								<span>新增廣告</span>
							</span>
						</button>
					</li>
				</ur>
			</div>
		</div>
		
		<div class="m-portlet__body">
			
			<table class="table table-bordered table-hover nowrap " id="data-table">
				<thead>
					<tr>
						<th class="dt-center">RecordId</th>		{{!-- 0 --}}
						<th class="dt-center">標題</th>			{{!-- 1 --}}
						<th class="dt-center">最後更新時間</th>	{{!-- 2 --}}
						<th class="dt-center">創立時間</th>		{{!-- 3 --}}
						<th class="dt-center">詳細內容</th>		{{!-- 4 --}}
					</tr>
				</thead>
			</table>

		</div>
	</div>

	<!--begin::add Modal-->
	<div class="modal fade" id="create-modal" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-lg  modal-dialog-centered" role="document">
			<div class="modal-content">
				<!--begin::Form-->
				<form id="create-form" autocomplete="off" class="m-form m-form--state m-form--label-align-right">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel">新增廣告</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						<div class="form-group m-form__group row">
							<label class="col-lg-2 col-form-label">廣告標題 *</label>
							<div class="col-lg-10 m-form__group-sub">
								<div class="m-input-icon m-input-icon--left">
									<input id="title" name="title" type="text" class="form-control m-input" placeholder="請輸入標題">
									<span class="m-input-icon__icon m-input-icon__icon--left"><span><i class="flaticon-exclamation-2"></i></span></span>
								</div>
								<span class="m-form__help"></span>
							</div>
						</div>
                        <div class="form-group m-form__group row">
							<label class="col-lg-2 col-form-label">廣告圖 *</label>
							<div class="col-lg-10 m-form__group-sub">
								{{!-- <textarea key="" id="adImg" name="adImg" class="form-control m-input"></textarea> --}}
                                <div class="container">
                                    <div class="drop">
                                        <div class="uploader">
                                            <label class="drop-label">Drag and drop images here</label>
                                            <input type="file" class="image-upload" id="photo" name="photo" accept="image/*">
                                        </div>
                                        <div id="image-preview"></div>
                                    </div>
                                </div>
							</div>
							<span class="m-form__help"> </span>
						</div>
					</div>
					<div class="modal-footer">
						<div class="row">
							<div class="col m--align-right">
								<button id="createButton" type="submit" class="btn m-btn--square  btn-primary m-btn m-btn--custom  ">確定新增</button>
								<button type="button" class="btn m-btn--square  btn-secondary m-btn m-btn--custom" data-dismiss="modal">取消</button>
							</div>
						</div>
					</div>
				</form>
				<!--end::Form-->
			</div>
		</div>
	</div>
	<!--end::add Modal-->
</div>

